registry=https://registry.npmjs.org/
progress=false
audit=false
fund=false

# Networking: be resilient but not endless
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-timeout=300000

# ✅ Only enable this if you hit peer dependency conflicts you can’t resolve:
# legacy-peer-deps=true

# If you pull private packages from npmjs, uncomment the two lines below
# and add NPM_TOKEN in Vercel → Project Settings → Environment Variables.
# always-auth=true
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}
